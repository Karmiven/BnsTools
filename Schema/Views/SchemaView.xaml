<UserControl x:Class="Schema.Views.SchemaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Height="30" VerticalAlignment="Bottom">
            <TextBlock Text="服务端路径" Width="60" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding ServerDirPath}" Width="500" Margin="10,0,0,0"/>
            <Button Command="{Binding SelectServerDirCommand}" Margin="10,0,0,0" Content="选择目录"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,10,0,0" Orientation="Horizontal">
            <TextBlock Text="输出路径" Width="60" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding OutSchemaPath}" Width="500" Margin="10,0,0,0"/>
            <Button Command="{Binding SelectOutSchemaPathCommand}" Margin="10,0,0,0" Content="选择目录"/>
        </StackPanel>
    </Grid>
</UserControl>
